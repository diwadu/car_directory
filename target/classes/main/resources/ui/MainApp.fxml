<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.dc4b.cardirectory.fxui.CarListController">

    <HBox alignment="TOP_RIGHT" prefWidth="-Infinity" prefHeight="50.0">
        <HBox.margin>
            <Insets left="20.0" bottom="0.0" right="20.0" top="0.0" />
        </HBox.margin>
        <HBox alignment="CENTER_LEFT" spacing="40">
            <!-- Search Text Field -->
            <TextField fx:id="searchTextField" promptText="Search" HBox.hgrow="ALWAYS">

            </TextField>

            <!-- Search Button with Icon (Replace "your-icon.png" with your actual icon) -->
            <Button fx:id="searchButton" mnemonicParsing="false" HBox.hgrow="NEVER" text="Search">
                <graphic>
                    <ImageView fitHeight="20" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/ui/images/search-icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="resetButton" mnemonicParsing="false" HBox.hgrow="NEVER" text="Reset">
                <graphic>
                    <ImageView fitHeight="20" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/ui/images/reset-icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </HBox>
    <!-- Car Properties Table -->
    <TableView fx:id="carTableView" VBox.vgrow="ALWAYS">
        <!-- Define Columns -->
        <columns>
            <TableColumn text="Brand" fx:id="brandColumn"/>
            <TableColumn text="Model" fx:id="modelColumn"/>
            <TableColumn text="Production Year" fx:id="productionYearColumn"/>
            <TableColumn text="Color" fx:id="colorColumn"/>
            <TableColumn text="VIN" fx:id="vinColumn"/>
            <TableColumn text="Number of Contractors" fx:id="numberOfContractorsColumn"/>
        </columns>
    </TableView>
</VBox>
